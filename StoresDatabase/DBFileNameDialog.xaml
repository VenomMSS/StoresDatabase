<Window x:Class="StoresDatabase.DBFileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoresDatabase"
        mc:Ignorable="d"
        Title="New SQLite Database" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="filenameTBox" HorizontalAlignment="Left" Height="26" Margin="30,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" BorderBrush="#FF214AD4" Background="#FFE4F3F1"/>
        <Button x:Name="OK_Btn" Content="OK" HorizontalAlignment="Left" Height="51" Margin="30,183,0,0" VerticalAlignment="Top" Width="71" Background="#FF48D341" Click="OK_Btn_Click"/>
        <Button x:Name="cancel_Btn" Content="Cancel" HorizontalAlignment="Left" Height="51" Margin="180,181,0,0" VerticalAlignment="Top" Width="71" IsCancel="True" Background="#FFFB0A36"/>
        <Label x:Name="instructionlabel" Content="Enter for name for the new database file" HorizontalAlignment="Left" Height="48" Margin="10,10,0,0" VerticalAlignment="Top" Width="221"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="34" Margin="30,104,0,0" TextWrapping="Wrap" Text="No spaces or punctuation accepted" VerticalAlignment="Top" Width="221" IsEnabled="False"/>

    </Grid>
</Window>
